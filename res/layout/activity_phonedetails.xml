<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <!-- 頂部title -->
    <LinearLayout 
        android:id="@+id/llayout_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" 
        android:background="@color/blue"
        >
        
        <Button 
            android:id="@+id/bt_backList"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/back_buttom_background"/>
        
		<TextView 
		    android:layout_width="0dp"
		    android:layout_height="45dp"
		    android:gravity="center"
		    android:text="商品详情"
		    android:textSize="18sp"
		    android:textStyle="bold"
		    android:layout_weight="1"
		    android:textColor="@color/white"
		    />
        <Button 
            android:id="@+id/bt_shoppingCart"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/shoppingcart"/>
    </LinearLayout>

   
	<ScrollView 
	   android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	<!-- 中間內容 -->
	<LinearLayout
	    android:id="@+id/llayout_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >

	    
	    <!-- 图片部分 -->
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="horizontal">
	        <ImageView
	            android:id="@+id/im_large"
	            android:layout_width="200dp"
	            android:layout_height="200dp"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:gravity="center"
	            android:scaleType="fitXY" />
			
	     </LinearLayout>
	        
	     <LinearLayout
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:orientation="vertical" >
			
	         <LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal">
	             
		         <LinearLayout
		             android:layout_width="0dp"
		             android:layout_height="30dp"
		             android:layout_weight="1"
		             android:orientation="horizontal" >
		
		             <TextView
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:paddingLeft="10dp"
		                 android:text="型号："
		                 android:gravity="center_vertical"
		                 android:textColor="#828282" />
		
		             <TextView
		                 android:id="@+id/tv_phoneName"
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="三星GalaxyS6"
		                 android:textColor="@color/black" />
		         </LinearLayout>
		         
		         <LinearLayout
	             android:layout_width="0dp"
	             android:layout_height="30dp"
	             android:layout_weight="1"
	             android:layout_marginLeft="10dp"
	             android:orientation="horizontal" >
	
		             <TextView
		                 android:layout_width="wrap_content"
		                 android:layout_height="wrap_content"
		                 android:gravity="center_vertical"
		                 android:text="系统："
		                 android:textColor="#828282" />
		
		             <TextView
		                 android:id="@+id/tv_phoneSystem"
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="Android"
		                 android:textColor="@color/black" />
	         </LinearLayout>
	    </LinearLayout>    
	    
	 	<LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal">
		             
		         <LinearLayout
		             android:layout_width="0dp"
		             android:layout_height="30dp"
		             android:layout_weight="1"
		             android:layout_marginLeft="10dp"
		             android:orientation="horizontal" >
	
		             <TextView
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="价格："
		                 android:textColor="#828282" />
	
		             <TextView
		                 android:id="@+id/tv_phonePrice"
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="￥4915"
		                 android:textColor="@color/red" />
		         </LinearLayout>
	         	
		         <LinearLayout
	             android:layout_width="0dp"
	             android:layout_height="30dp"
	             android:layout_weight="1"
	             android:orientation="horizontal" >
	
		             <TextView
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="上市时间："
		                 android:textColor="#828282" />
		
		             <TextView
		                 android:id="@+id/tv_phoneTime"
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="2015/3"
		                 android:textColor="@color/black" />

	         	</LinearLayout>
	         </LinearLayout>
	
	         <LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal">
		         
	             <LinearLayout
		             android:layout_width="0dp"
		             android:layout_height="30dp"
		             android:layout_weight="1"
		             android:layout_marginLeft="10dp"
		             android:orientation="horizontal" >
		
		             <TextView
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="厚度："
		                 android:textColor="#828282" />
		
		             <TextView
		                 android:id="@+id/tv_phoneThickness"
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="6.8mm"
		                 android:textColor="@color/black" />
		         </LinearLayout>
	             
	             
	             <LinearLayout
	             android:layout_width="0dp"
	             android:layout_height="30dp"
	             android:layout_weight="1"
	             android:orientation="horizontal" >
	
		             <TextView
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="屏幕大小："
		                 android:textColor="#828282" />

		             <TextView
		                 android:id="@+id/tv_phoneScreenSize"
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="5.1英寸"
		                 android:textColor="@color/black" />

	         	</LinearLayout>
         	</LinearLayout>
	         
	     	<LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal">
	         
	         <LinearLayout
	             android:layout_width="0dp"
	             android:layout_height="30dp"
	             android:layout_weight="1"
	             android:layout_marginLeft="10dp"
	             android:orientation="horizontal" >
	
		             <TextView
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="核心数："
		                 android:textColor="#828282" />
		
		             <TextView
		                 android:id="@+id/tv_phoneCPUNum"
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="八核"
		                 android:textColor="@color/black" />
	         	</LinearLayout>
	         	
		         <LinearLayout
	             android:layout_width="0dp"
	             android:layout_height="30dp"
	             android:layout_weight="1"
	             android:orientation="horizontal" >
	
		             <TextView
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="像素："
		                 android:textColor="#828282" />
		
		             <TextView
		                 android:id="@+id/tv_phonePixel"
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:gravity="center_vertical"
		                 android:text="1600万"
		                 android:textColor="@color/black" />
	        	 </LinearLayout>
	     </LinearLayout>    
	         
	         
	         
	         <LinearLayout
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="10dp"
	             android:orientation="horizontal" >
	
	             <TextView
	                 android:layout_width="wrap_content"
	                 android:layout_height="match_parent"
	                 android:paddingTop="5dp"
	                 android:text="网络类型："
	                 android:textColor="#828282" />
	
	             <TextView
	                 android:id="@+id/tv_phoneNetSize"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:gravity="center_vertical"
	                 android:paddingTop="5dp"
	                 android:paddingBottom="5dp"
	                 android:text="联通3G，联通4G，联通2G/移动2G，移动3G，移动4G"
	                 android:textColor="@color/black" />
	         </LinearLayout>
	         <LinearLayout
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="10dp"
	             android:orientation="horizontal" >
	
	             <TextView
	                 android:layout_width="wrap_content"
	                 android:layout_height="match_parent"
	                 android:paddingTop="5dp"
	                 android:text="特点描述："
	                 android:textColor="#828282" />
	
	             <TextView
	                 android:id="@+id/tv_phoneDescribe"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:gravity="center_vertical"
	                 android:paddingTop="5dp"
	                 android:paddingBottom="5dp"
	                 android:text="无线充电功能，指纹识别"
	                 android:textColor="@color/black" />
	         </LinearLayout>
	     </LinearLayout>
	</LinearLayout>
	</ScrollView>
	 <!-- 底部 -->
	<LinearLayout 
	    android:id="@+id/llayout_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:background="@color/black">

	    <Button
	        android:id="@+id/bt_addToShoppingCart"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1" 
	        android:text="加入购物车"
	        android:textColor="@color/white"
	        android:background="#FF8000"/>
	    <Button
	        android:id="@+id/bt_shoppingNow"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1" 
	        android:text="立即购买"
	        android:textColor="@color/white"
	        android:background="#E20202"/>

	</LinearLayout>
</LinearLayout>
