<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEBEB"
    android:orientation="vertical" >
    
    <!-- 頂部title -->
    <RelativeLayout 
        android:id="@+id/llayout_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue"
        android:focusable="true"
        >
        
		<TextView 
		    android:layout_width="match_parent"
		    android:layout_height="45dp"
		    android:gravity="center"
		    android:text="意见反馈"
		    android:textSize="20sp"
		    android:textStyle="bold"
		    android:textColor="@color/white"
		    android:background="@color/blue"/>
		
		<Button 
            android:id="@+id/bt_back_fromFeedback"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/back_buttom_background"/>
        
    </RelativeLayout>
    
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:gravity="bottom"
       android:paddingLeft="20dp"
       android:text="您的反馈"
       android:textSize="18sp"/>
   <EditText 
       android:id="@+id/et_feedbackContent"
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="20dp"
       android:layout_marginLeft="20dp"
       android:padding="5dp"
       android:gravity="top|left"
       android:textSize="15sp"
       android:hint="请输入您的反馈意见"
       android:background="@color/white"/>
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:gravity="bottom"
       android:paddingLeft="20dp"
       android:text="请提供正确的用户联系信息"
       android:textSize="18sp"/>
   <EditText 
       android:id="@+id/et_contactInfo"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="20dp"
       android:layout_marginLeft="20dp"
       android:paddingLeft="5dp"
       android:gravity="center_vertical"
       android:textSize="15sp"
       android:hint="填写手机号/QQ/邮箱"
       android:background="@color/white"/>
   
    <RelativeLayout
        android:id="@+id/ReLayout_commitOK"
       	android:layout_width="match_parent"
	     android:layout_height="30dp"
	     android:layout_marginTop="20dp"
	     android:layout_marginLeft="20dp">
	     <ImageView 
	         android:id="@+id/im_ok"
	         android:layout_width="30dp"
	         android:layout_height="20dp"
	         android:scaleType="fitXY"
	         android:layout_toLeftOf="@+id/tv_commitOK"
	         android:src="@drawable/tick_ok1"/>
	  
	  <TextView
	      android:id="@+id/tv_commitOK"
	      android:layout_width="wrap_content"
	      android:layout_height="35dp"
	      android:layout_centerInParent="true"
	      android:text="提交成功!"
	      android:textSize="16sp"
	      android:textColor="#4ACB32"
	      />
   </RelativeLayout>
   <Button
       android:id="@+id/bt_feedbackCommit"
       android:layout_width="match_parent"
       android:layout_marginTop="20dp"
       android:layout_height="40dp"
       android:gravity="center"
       android:layout_marginRight="20dp"
       android:layout_marginLeft="20dp"
       android:text="提交"
       android:textColor="@color/white"
       android:background="#0277EC"/>
   
   
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="30dp"
	    android:layout_gravity="end"
	    android:gravity="center"
	    android:text="感谢您对我们的支持"
       android:textSize="12sp"/>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:gravity="top|center_horizontal"
	    android:text="您的宝贵意见是我们每一个进步的动力"
       android:textSize="12sp"/>
</LinearLayout>
</ScrollView>